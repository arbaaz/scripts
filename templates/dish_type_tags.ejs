<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <section class="panel">
        <div class="panel-body"> 
          <section id="alerts"></section> 

            <div class="col-lg-5">
              <h4> Dish Type Tags   <a  href="#dish_type_tags/new" class="btn btn-success btn-sm add"><i class="fa fa-plus-square"></i></i> <span class="hidden-xs">Add a dish type tag</span></a> </h4>
            </div>                                          
            </div>
            <hr/>

            <div class="row">
              <div class="col-lg-12">
                <table class="table general-table" id="tags_table">
                  <thead>
                      <tr>
                          <th >Keyword</th>
                          <th>Tag</th>
                          <th>Actions</th>
                      </tr>
                  </thead>
                  <tbody class="searchable">
                    <% _.each(tags, function(tag, i) { %>                                     
                      <tr id='<%= tag.get("id") %>' > 
                        <td class="col-lg-4 keyword" id="keyword-<%= tag.get("id") %>" ><%= tag.get("keyword") %></td>
                       
                        <td class="col-lg-4">
                          <%= _.invert(window.collections.veg_types)[tag.get("tag")] %>
                        </td>
                        <td class="col-lg-4"> 
                            <a  href="#dish_type_tags/edit/<%= tag.get("id") %>" class="btn btn-primary btn-sm save col-lg-5"  id="<%= tag.get("id") %>" ><i class="fa fa-edit"></i> <span class="hidden-xs"> Edit</span></a> 
                            <div class="col-lg-1" ></div>
                        
                            <a class="btn btn-danger btn-sm hidden-xs delete col-lg-5"   id="<%= tag.get("id") %>"><i class="fa fa-trash-o fa-fw"></i> Delete</a>
                                      
                        </td>  
                      </tr>
                    <% }); %>                                                 
                  </tbody>
                </table>                
              </div>
            </div>
            <hr/>
            
            
        </div>
    </section>
  </div>
</div>

