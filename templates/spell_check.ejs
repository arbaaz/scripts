<div id="top_navigation" class="row" >
</div>


<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <section class="panel">
      <div class="panel-body">                        
        <div class="row">    
          <div class="col-lg-9">
            <h2>Spell Check</h2>
          </div>
          <div class="col-lg-3"> 
            <div class="col-lg-12"> 
              <a class="btn btn-primary pull-right next" href="#menu_timeline/<%=restaurant_id%>/dish_type_tags"><i class="fa fa-sign-out"></i> Next</a>   
            </div>
          </div>    
        </div>                
      </div>
    	<div class="row">
    		<div class="col-lg-12">
    			<table class="table  table-hover general-table">
    			<colgroup width="250"><colgroup width="150"><colgroup width="400"><colgroup width="150">
  			    <thead>
  			      <tr>
    						<th>Name</th>
    						<th>Mistakes</th>
    						<th>Suggestions</th>
    						<th>Add To Dictionary</th>
			      	</tr>
  			  	</thead>
  			  	<tbody>
  			  		<% _.each(dictionary,function(data,i){ %>
  			  		<tr>
    						<td>
  								<% if(data.type=="MenuCategory") {%>
  								<button class="btn btn-info" type="button">M</button>
  								<% } else { %>
  								<button class="btn btn-info" type="button">I</button>
  								<% } %>
  								<%= data.name %>
    						</td>
    						<td><b><% if(data.field == "is_description"){ %>
                <button class="btn btn-success" type="button">D</button>
                <% } %>
                <%= data.word %></b></td>
    						<td>
    							<%if(data.suggestions.length) {%>
    					            <% _.each(data.suggestions,function(suggestion){ %>
    					              <a class='js_suggestion btn btn-default btn-sm' data-word="<%=suggestion%>" style="margin-bottom:1px;"> 
    					                <%= suggestion %>
    					              </a>
    					            <% }) %>
    					            <br/>
    					          <%}%>
    					          <input type="text" class="suggestion_text" style="form-control input-sm"><br><br>

    					          <button name="btn" id="<%=data.id%>" class='update_word btn btn-primary btn-sm' data-mistake-type="<%= data.type%>" data-restaurant-id="<%= restaurant_id %>"   data-mistake-id="<%= data.id%>" data-mistake-word="<%= data.word %>" data-field-name="<%= data.field %>">Update Word</button><br>
  						  </td>
    						<td>							  	
    							<button class="btn btn-success" id="add_dictionary_word" title="Add to Dictionary" type="button" data-mistake-id="<%= data.id%>" data-mistake-word="<%= data.word %>">Add</button>
    						</td>
  			  		</tr>
  			  		<% }) %>
    			  </tbody>
    			</table>
    		</div>
    	</div>
    </section>
  </div>
</div>



