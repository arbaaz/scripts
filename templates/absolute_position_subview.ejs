<div class="row">
  <div class="col-xs-12">
    <section class="panel">
        <div class="panel-body"> 
            <div class="row">
              <div class="col-xs-offset-8 col-xs-4" style="padding-top:2px;">
                <button class="btn btn-success btn-sm" id="add_new"><i class="fa fa-plus-square"></i> Add a new Absolute Position</button>
              </div>
            </div>    
            <div class="row">
              <div class="col-xs-12">
                <table class="table  table-hover general-table">
                  <thead>
                      <tr>
                          <th> # </th>
                          <th>Name of Restaurant</th>
                          <th>Status</th>
                          <th>Absolute Position</th>
                          <th>Actions</th>
                      </tr>
                  </thead>
                  <tbody class="searchable">
                    <% _.each(restaurants, function(restaurant, i) { %>                                     
                      <tr> 
                        <td>
                          <p class="text-info">
                            <%= restaurant.form_id %>
                          </p>
                        </td>

                        <td>
                            <% if (restaurant.name != null) { %><%= restaurant.name %><% } %><br/>                                
                        </td>
                        <td><%= restaurant.status %></td>    

                        <td class="to_center"><%= restaurant.absolute_position %></td>     
                        <td>                                      
                          <button class="btn btn-primary btn-sm edit_position" data-restid="<%=restaurant.restaurant_id%>" data-delareaid= "<%=restaurant.id%>"><i class="fa fa-edit"></i> Edit</a> </button>
                          <button class="btn btn-primary btn-sm delete-position" data-delareaid="<%=restaurant.id%>"><i class="fa fa-list"></i> Delete</a></button>
                                       
                        </td>
                      </tr>
                    <% }); %>                                                 
                  </tbody>
                </table>                
              </div>
            </div>
            
        </div>
    </section>
  </div>
</div>

