<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel">
      <div class="panel-body">
        <h3 class="to_center">Edit Your Profile</h3>
        <hr/>
        <form role="form" class="form-horizontal" id="user_profile_form" method="POST">
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-6">
              <input type="text" class="form-control input-sm" name="first_name" id="first_name"  placeholder=" First Name" required  value="<%=window.user.get_profile().first_name %>">
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
              <input type="text" class="form-control input-sm" name="last_name" id="last_name"  placeholder="Last Name" required value="<%=window.user.get_profile().last_name %>">
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-6">
              <input type="text" class="form-control input-sm" name="phone" id="phone" placeholder="Phone no."  value="<%=window.user.get_profile().phone_numbers[0].number %>" disabled />
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
              <input type="text" class="form-control input-sm" name="email" id="email" placeholder="Email id" value="<%=window.user.get_profile().email %>" disabled />
            </div>
          </div>  
          <hr/>
          <div class="to_center">
            <button type="Create" class="btn btn btn-success" id="editprofile">Submit</button>
          </div>
        </form>
        <br/>
        <h3 class="to_center">Edit Your Profile Picture</h3>
        <hr/>
        <form role="form" class="form-horizontal" id="user_avatar_form" method="POST" enctype="multipart/form-data" action="/user/edit_profile_avatar.json">
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3" id="avatar_image">
              <% if (typeof window.user.get_profile().avatar != "undefined" && window.user.get_profile().avatar.success) { %>
              <div>
                <img class="center-block" src="<%= window.user.get_profile().avatar.thumb %>"/>
                <br />
              </div>
              <% } %>
              <input type="file" class="form-control input-sm" name="avatar" id="avatar" placeholder="Profile pic">
            </div>
          </div>
          <hr/>
          <div class="to_center">
            <button type="Create" class="btn btn btn-success" id="editavatar">Submit</button>
            &nbsp;&nbsp;
            <button type="Delete" class="btn btn btn-danger" id="deleteavatar">Delete</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>