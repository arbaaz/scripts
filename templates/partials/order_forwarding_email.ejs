<div class="form-group" id="email_field_<%= i %>">
  <input type="hidden" name="order_forward_email_<%= i %>_to_delete" id="delete_email_<%= i %>" value="false">
  <input type="hidden" name="order_forward_email_<%= i %>_email_id" id="order_email_id_<%= i %>" value="<%= id %>">
  <div class="col-xs-1 visible-xs"></div>
  <label class="col-sm-4 col-xs-4 control-label">Email</label>
  <div class="col-md-6 col-sm-6 col-xs-6" style="width = 377px; !important">
    <input type="email" name="order_forward_email_<%= i %>_email" class="form-control input-sm" id="forward_email_<%= i %>" placeholder="Email" value="<%= email %>" autocomplete="off">
  </div>
  <a class="btn btn-danger btn-sm delete_email hidden-xs" data-index="<%= i %>"><i class="fa fa-times"></i></a>

  <div class="checks_<%= i %>">
    <div class="row">
      <div class="col-xs-1 visible-xs"></div>
      <label class="col-sm-4 col-xs-4 control-label">Owner</label>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <input type="checkbox" name="order_forward_email_<%= i %>_is_owner" id="is_owner_<%= i %>" <% if (owner) { %> checked="true" <% } %>>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-1 visible-xs"></div>
      <label class="col-sm-4 col-xs-4 control-label">General Manager</label>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <input type="checkbox" name="order_forward_email_<%= i %>_is_general_manager" id="is_general_manager_<%= i %>" <% if (general_manager) { %> checked="true" <% } %>>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-1 visible-xs"></div>
      <label class="col-sm-4 col-xs-4 control-label">Manager</label>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <input type="checkbox" name="order_forward_email_<%= i %>_is_manager" id="is_manager_<%= i %>" <% if (manager) { %> checked="true" <% } %>>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-1 visible-xs"></div>
      <label class="col-sm-4 col-xs-4 control-label">Verified</label>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <input type="checkbox" name="order_forward_email_<%= i %>_is_verified" id="is_verified_<%= i %>" <% if (verified) { %> checked="true" <% } %>>
      </div>
    </div>
  </div>
</div>
<br>