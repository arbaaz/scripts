<div class="form-group">
  <div class="col-xs-1 visible-xs"></div>
	<label for="<%= id %>" class="col-md-4 col-sm-4 col-xs-4 control-label"><%= label %></label>
	<div class="col-md-8 col-sm-8 col-xs-6">
		<select name="<%= name %>" id="<%= id %>" class="form-control input-sm custom_select">
		<% _.each(collection, function(item) { %>
			<option <% if (value == item[1]) { %>selected="selected"<% } %> value="<%= item[1] %>"><%= item[0] %></option>
		<% }) %>
		</select>
	</div>
</div>