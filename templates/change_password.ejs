<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel">
      <div class="panel-body">
        <h3 class="to_center">Change Your Password</h3>
        <hr/>
        <form role="form" class="form-horizontal" id="password_form" method="POST">
          <div class="form-group">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <input type="password" class="form-control input-sm" name="current_pass" id="old_password" placeholder="Current Password" required >
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <input type="password" class="form-control input-sm" name="new_pass" id="new_password" placeholder="New Password ( Atleast six characters.)" pattern=".{6,}" required title="New password should have atleast six characters">
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <input type="password" class="form-control input-sm" name="confirm_pass" id="confirm_password" placeholder="Confirm Password" required>
            </div>
          </div>
          <hr/>
          <div class="to_center">
            <button type="Create" class="btn btn btn-success" id="editpassword">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>